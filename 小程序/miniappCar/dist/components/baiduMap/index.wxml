<block>
    <view class="index-map-container">
        <map id="myMap" include-points="{{carStateList}}" markers="{{carStateList}}"
        bindmarkertap="handleMakertap" bindtap="handleMap" style="width: 100%; height: 100%;">
            <block wx:if="{{!!showMarkerInfo}}">
                <marker-info-window __triggerObserer="{{ _triggerObserer }}"></marker-info-window>
            </block>
            <cover-image class="reload-btn" src="{{reloadIcon}}" bindtap="handleReloadBtn"></cover-image>
            <cover-image class="header-btn" src="{{headerIcon}}" bindtap="handleMenu"></cover-image>
            <sider-menu __triggerObserer="{{ _triggerObserer }}"></sider-menu>
        </map>
    </view>
</block>