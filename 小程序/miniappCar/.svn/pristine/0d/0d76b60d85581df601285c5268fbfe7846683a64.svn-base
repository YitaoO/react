@import "../../components/calendar/index.wxss";


.calendar-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  text-align: center;
  border-bottom: solid 1rpx #5495e5;
}
.calendar-top .item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #5495e5;
  background: #fff;

  /* border: solid 1px #5495e5; */
}
.calendar-top .item:first-child {
  border-right: solid 1rpx #5495e5;
}
.calendar-top .item:nth-child(2) {
  border-right: solid 1rpx #5495e5;
}
.calendar-top .active {
  color: #fff;
  background: #5495e5;
}
