.menu-wrap {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 80%;
  background: #fff;
  transform: rotate(0deg) scale(1) translate(-100%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(-100%, 0%);
  transition: all 0.4s ease;
  z-index: 100;
  .menu-header {
    height: 171rpx;
    background: #f6f8fa;
    display: flex;
    align-items: center;
    .right {
      flex: 1;
      // padding-left: 15rpx;
      .name {
        font-size: 40rpx;
        color: #333;
      }
      .desp {
        // overflow: hidden;

        // white-space: nowrap;
        // text-overflow: ellipsis;

        // -webkit-line-clamp: 1;
        // width: 100%;
        font-size: 26rpx;
        color: #666;
      }
    }
    .icon-wrap {
      flex: 0 0 20%;
      width: 120rpx;
      height: 100rpx;
      padding-left: 15rpx;
      .icon {
        width: 100rpx;
        height: 100rpx;
        border-radius: 50%;
        overflow: hidden;
        display: block;
      }
    }
  }
  .nav-list {
    font-size: 30rpx;
    color: #333;
    padding-top: 20rpx;

    .item {
      line-height: 100rpx;
      margin-bottom: 10rpx;
      vertical-align: middle;
      padding-left: 80rpx;
      .image {
        width: 60rpx;
        height: 46rpx;
        display: inline-block;
        vertical-align: middle;
        &.history {
          background: url("../../images/index_menu_history_icon.png") no-repeat;
          background-size: 100% 100%;
        }
        &.goStatistics {
          background: url("../../images/index_menu_goStatistics_icon.png")
            no-repeat;
          background-size: 100% 100%;
        }
        &.alarmStatistics {
          background: url("../../images/index_menu_alarmStatistics_icon.png")
            no-repeat;
          background-size: 100% 100%;
        }
        &.oilStatistics {
          background: url("../../images/index_menu_oilStatistics_icon.png")
            no-repeat;
          background-size: 100% 100%;
        }
        &.waterStatistics {
          background: url("../../images/index_menu_waterStatistics_icon.png")
            no-repeat;
          background-size: 100% 100%;
        }
      }
      .title {
        padding-left: 25rpx;
      }
    }
  }
}
.open-trans {
  transform: rotate(0deg) scale(1) translate(0%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(0%, 0%);
}
