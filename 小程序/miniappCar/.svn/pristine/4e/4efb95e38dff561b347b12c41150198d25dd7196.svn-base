<block>
    <view class="scroll-wrap">
        <scroll-view class="scorll" scroll-y="{{true}}" scroll-with-animation="{{true}}"
        scroll-top="0" lower-threshold="20" upper-threshold="20" bindscrolltolower="onScrolltolower">
            <view class="item" wx:key="{{item.useEffic}}" wx:for="{{carGuijiList.list}}"
            wx:for-item="item">
                <view class="left">
                    <view class="cirle"></view>
                    <view class="line"></view>
                </view>
                <view class="right">
                    <view class="right-top" bindtap="handleToDetail">
                        <view class="text">{{item.date}}</view>
                        <image src="{{ArrowIcon}}" class="navigator-arrow"
                        />
                    </view>
                    <view class="right-bottom">
                        <view class="time">
                            <view class="item-title">点火</view>
                            <view class="item-value">{{item.totalMinuter}}</view>
                        </view>
                        <view class="distance">
                            <view class="item-title">行驶</view>
                            <view class="item-value">{{item.runDistance}}:{{item.runMinuter}}:{{item.totalMinuter}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</block>