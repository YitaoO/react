<!-- 日期选择模版 -->
<template name="calendar-month">
    <view class="month-wrap flex box box-tb box-align-center">
        <view class="month-center pink-color box box-tb">
            <view class="item">
                <view class="top-handle fs28 box box-lr box-align-center box-pack-center">
                    <view class="prev box box-rl" bindtap="" data-handle="prev">
                        <view class="image-wrap image-pre prev-handle box box-lr box-align-center box-pack-center"></view>
                    </view>
                    <view class="date-area box box-lr box-align-center box-pack-center fs26">
                        {{thisYear}}
                    </view>
                    <view class="next box box-lr" bindtap="" data-handle="next">
                        <view class="image-wrap image-next prev-handle box box-lr box-align-center box-pack-center"></view>
                    </view>
                </view>
                <view class="days box box-lr box-wrap" bindtouchstart="calendarTouchstart" bindtouchmove="calendarTouchmove">
                    <view class="grid-month normal-day-color box box-align-center box-pack-center" wx:for="{{months}}" wx:key="{{index}}" data-idx="{{index}}" bindtap="handleMonthChoic">
                        <view class="day-with-dot box box-tb box-align-center box-pack-center fs26">
                            {{item}}
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</template>