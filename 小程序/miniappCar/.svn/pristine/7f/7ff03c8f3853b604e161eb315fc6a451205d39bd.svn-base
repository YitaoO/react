.history-index-wrap {
  width: 100%;
  height: 100%;

  .index-top {
    position: fixed;
    top: 25rpx;
    left: 25rpx;
    right: 25rpx;

    box-shadow: 3px 1px 16px 0px rgba(12, 43, 76, 0.05);
    border-radius: 10px;
  }
  .top-wrap {
    display: flex;
    padding: 50rpx;
    background: #fff;
    align-items: center;
    .left {
      flex: 1;
      .title {
        font-size: 30rpx;
        color: #666;
      }
      .value {
        font-size: 50rpx;
        color: #333;
      }
    }
    .right {
      flex: 0 0 20%;
      font-size: 30rpx;
      color: #20abf3;
    }
  }
}
