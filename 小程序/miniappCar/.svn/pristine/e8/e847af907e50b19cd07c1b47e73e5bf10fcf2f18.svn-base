@import "../../components/calendar/index.wxss";

.calendar-top {
  display: flex;
  text-align: center;
  border-bottom: solid 1px #5495e5;
}
.calendar-top .item {
  flex: 1;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #5495e5;
  background: #fff;

  /* border: solid 1px #5495e5; */
}
.calendar-top .item:first-child {
  border-right: solid 1px #5495e5;
}
.calendar-top .item:nth-child(2) {
  border-right: solid 1px #5495e5;
}
.calendar-top .active {
  color: #fff;
  background: #5495e5;
}
