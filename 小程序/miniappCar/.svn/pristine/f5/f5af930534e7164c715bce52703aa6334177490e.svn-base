.scroll-wrap {
  height: 100%;
}
.scorll {
  height: 950px;
  .item {
    display: flex;
    padding-bottom: 11px;

    .left {
      flex: 0 0 50px;
      position: relative;
      .cirle {
        position: absolute;
        left: 10rpx;
        top: 20rpx;
        width: 31rpx;
        height: 31rpx;
        border-radius: 31rpx;
        background-color: #dddddd;
      }
      .line {
        position: absolute;
        left: 22rpx;
        top: -15rpx;
        width: 4rpx;
        height: 100%;
        border-radius: 31rpx;
        background-color: #dddddd;
      }
    }
    .right {
      flex: 1;
      box-shadow: 3px 1px 16px 0px rgba(12, 43, 76, 0.05);
      border-radius: 10px;
      .right-top {
        display: flex;
        background: #fff;
        line-height: 75px;
        align-items: center;
        border-bottom: solid 1px #dddddd;
        .text {
          flex: 1;
          font-size: 30rpx;
          padding-left: 40rpx;
          color: #666;
        }
        .navigator-arrow {
          flex: 0 0 35rpx;
          width: 34rpx;
          height: 34rpx;
        }
      }
      .right-bottom {
        display: flex;
        background: #fff;
        padding: 10px 40px;
        .item-title {
          font-size: 30px;
          color: #666;
        }
        .item-value {
          font-size: 40px;
          color: #333;
        }
        .time {
          flex: 0 0 60%;
        }
        .distance {
          flex: 1;
        }
      }
    }
  }
  .item:first-child {
    .line {
      top: 45rpx;
    }
  }
  /*隐藏滚动条*/
  // ::-webkit-scrollbar {
  //   width: 0;
  //   height: 0;
  //   color: transparent;
  // }
}
