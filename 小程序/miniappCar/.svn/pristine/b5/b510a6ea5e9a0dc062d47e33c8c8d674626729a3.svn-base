import Taro, { Component } from "@tarojs/taro";
import { connect } from "@tarojs/redux";
import { View } from "@tarojs/components";
import Dialog from "../../components/dialog";

import "./index.scss";

@connect(({ userInfo, car }) => ({
  userInfo,
  car
}))
class ChoiceCar extends Component {
  config = {
    navigationBarTitleText: "选择车辆"
  };
  componentDidMount() {
    const { listTreeCar } = this.props.car;
    if (listTreeCar.length == 0) {
      Dialog.showLoading();
      this.props.dispatch({
        type: "car/getCarTree",
        payload: {
          UserId: this.props.userInfo.carUserInfo.UserID
        }
      });
    }
  }
  handleChoice = item => {
    this.props.dispatch({
      type: "car/saveCar",
      response: {
        choiceCar: item
      }
    });

    Taro.navigateTo({ url: "/pages/history/index?isChoice=true" });
  };
  render() {
    const { listTreeCar } = this.props.car;

    return (
      <View className="choiceCar-wrap">
        {listTreeCar.map(item => {
          return (
            <View
              className="item"
              key={item.kid}
              onClick={this.handleChoice.bind(this, item)}
            >
              {item.carName}
            </View>
          );
        })}
      </View>
    );
  }
}

export default ChoiceCar;
