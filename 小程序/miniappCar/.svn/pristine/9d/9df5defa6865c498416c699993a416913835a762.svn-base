.history-index-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  // overflow: hidden;
  // padding: 50rpx;
  .index-top {
    padding: 50px 25px;
    .top-wrap {
      display: flex;
      padding: 25px;
      background: #fff;
      align-items: center;
      box-shadow: 3px 1px 16px 0px rgba(12, 43, 76, 0.05);
      border-radius: 10px;

      .left {
        flex: 1;
        .title {
          font-size: 30rpx;
          color: #666;
        }
        .value {
          font-size: 50rpx;
          color: #333;
        }
      }
      .right {
        flex: 0 0 20%;
        font-size: 30rpx;
        color: #20abf3;
      }
    }
  }
  .index-center {
    flex: 1;
    padding: 0 25px;
    .title {
      font-size: 36px;
      color: #666;
      padding-left: 55px;
      line-height: 85px;
    }
    .lists {
      height: calc(100% - 90px) !important;
    }
  }
}
